<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addfriends_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <ImageButton
        android:id="@+id/addfriends_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add"

        tools:ignore="VectorDrawableCompat"
        android:padding="1dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/addfriends"
        app:layout_constraintBottom_toBottomOf="@+id/addfriends_button"
        app:layout_constraintEnd_toEndOf="@+id/addfriends_button"
        app:layout_constraintStart_toStartOf="@+id/addfriends_button"
        app:layout_constraintTop_toTopOf="@+id/addfriends_button" />
</androidx.constraintlayout.widget.ConstraintLayout>